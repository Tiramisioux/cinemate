{
  "$schema": "./settings.schema.json",

  "system": {
    "wifi_hotspot": {
      "name": "CinePi",
      "password": "11111111"
    }
  },  

  "geometry": {
    "cam0": {
      "rotate_180": false,
      "horizontal_flip": false,
      "vertical_flip": false
    },
    "cam1": {
      "rotate_180": false,
      "horizontal_flip": false,
      "vertical_flip":false
    }
  },

  "output": {
    "cam0": {
      "hdmi_port": 0
    },
    "cam1": {
      "hdmi_port": 1
    }
  },

  "preview": {
    "default_zoom": 2.0,
    "zoom_steps":   [1.0, 1.5, 2.0]
  },

  "anamorphic_preview": {
      "default_anamorphic_factor": 1,
    "anamorphic_steps": [1, 1.33, 2.0]
  },

  "gpio_output": {
    "pwm_pin": 19,
    "rec_out_pin": [6, 21]
  },
  
  "arrays": {
    "iso_steps": [100, 200, 400, 640, 800, 1200, 1600, 2500, 3200],
    "shutter_a_steps": [1, 45, 90, 135, 172.8, 180, 225, 270, 315, 346.6, 360],
    "fps_steps": [1, 2, 4, 8, 12, 16, 18, 24, 25, 33, 40, 50],
    "wb_steps": [3200, 4400, 5600]
  },
  
  "settings": {
    "light_hz": [50, 60]
  },
  
  "analog_controls": {
    "iso_pot": 0,
    "shutter_a_pot": 2,
    "fps_pot": 4,
    "wb_pot": 6
  },
  
  "free_mode": {
    "iso_free": false,
    "shutter_a_free": false,
    "fps_free": true,
    "wb_free": false
  },


  
"buttons": [
    {
      "pin": 5,
      "pull_up": true,
      "debounce_time": 0.1,
      "press_action": {"method": "rec"}
    },
    {
      "pin": 13,
      "pull_up": false,
      "debounce_time": 0.1,
      "press_action": {"method": "inc_iso"}
    },
    {
      "pin": 10,
      "pull_up": false,
      "debounce_time": 0.1,
      "press_action": {"method": "dec_iso"}
    },
    {
      "pin": 16,
      "pull_up": "False",
      "debounce_time": "0.1",
      "press_action": {"method": "set_fps_double"},
      "single_click_action": "None",
      "double_click_action": "None",
      "hold_action": "None"
    },
    {
      "pin": 26,
      "pull_up": "False",
      "debounce_time": "0.1",
      "press_action": "None",
      "single_click_action": {"method": "set_resolution"},
      "double_click_action": {"method": "restart_camera"},
      "triple_click_action": {"method": "reboot"},
      "hold_action": {"method": "toggle_mount"}
    }
  ],

  "two_way_switches": [
      {
        "pin": 27,
        "state_on_action": {"method": "set_all_lock", "args": [1]},
        "state_off_action": {"method": "set_all_lock", "args": [0]}
      },
    {
      "pin": 24,
      "state_on_action": {"method": "set_trigger_mode", "args": [1]},
      "state_off_action": {"method": "set_trigger_mode", "args": [0]}
    },
    {
      "pin": 22,
      "state_on_action": {"method": "set_shutter_a_sync_mode", "args": [1]},
      "state_off_action": {"method": "set_shutter_a_sync_mode", "args": [0]}
    }
  ],
  
  "rotary_encoders": [
    {
      "clk_pin": 9,
      "dt_pin": 11,
      "encoder_actions": {
        "rotate_clockwise": {"method": "inc_iso", "args": []},
        "rotate_counterclockwise": {"method": "dec_iso", "args": []}
      }
    },
    {
      "clk_pin": 23,
      "dt_pin": 25,
      "encoder_actions": {
        "rotate_clockwise": {"method": "inc_shutter_a_nom", "args": []},
        "rotate_counterclockwise": {"method": "dec_shutter_a_nom", "args": []}
      }
    },
    {
      "clk_pin": 8,
      "dt_pin": 7,
      "encoder_actions": {
        "rotate_clockwise": {"method": "inc_fps", "args": []},
        "rotate_counterclockwise": {"method": "dec_fps", "args": []}
      }
    },
    {
      "clk_pin": 12,
      "dt_pin": 20,
      "encoder_actions": {
        "rotate_clockwise": {"method": "inc_wb", "args": []},
        "rotate_counterclockwise": {"method": "dec_wb", "args": []}
      }
    }
  ],

  "quad_rotary_encoders": {
    "0": {"setting_name": "iso", "gpio_pin": 5},
    "1": {"setting_name": "shutter_a", "gpio_pin": 16},
    "2": {"setting_name": "fps", "gpio_pin": 26},
    "3": {"setting_name": "wb", "gpio_pin": 5}
  },

  "i2c_oled": {
    "enabled": false,
    "width": 64,
    "height": 48,
    "font_size": 7,
    "values": [
      "iso",
      "fps",
      "shutter_a",
      "resolution",
      "is_recording",
      "cpu_temp"
    ]
  }
}
